<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee" version="5.0">

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.example.vendor.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VendorDisplayServlet</servlet-name>
        <servlet-class>com.example.vendor.VendorDisplayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VendorDisplayServlet</servlet-name>
        <url-pattern>/vendorList</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>register.jsp</welcome-file>
    </welcome-file-list>
</web-app>
